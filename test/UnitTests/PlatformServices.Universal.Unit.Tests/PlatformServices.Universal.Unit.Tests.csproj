    <Reference Include="Microsoft.VisualStudio.TestPlatform.TestFramework.Extensions">
      <HintPath>$(ArtifactsBinDir)Extension.UWP\uap10.0.10240\Microsoft.VisualStudio.TestPlatform.TestFramework.Extensions.dll</HintPath>
