    <Reference Include="System.Xml" />
    <Reference Include="System.Xml.ReaderWriter" Private="True" />
    <Reference Include="System.Threading" Private="True" />
    <Reference Include="System.Threading.Tasks" Private="True" />
    <Reference Include="System.Xml.Linq" />
    <Reference Include="Microsoft.VisualStudio.TestPlatform.MSTestAdapter.PlatformServices">
      <HintPath>$(ArtifactsBinDir)PlatformServices.Universal\uap10.0.10240\Microsoft.VisualStudio.TestPlatform.MSTestAdapter.PlatformServices.dll</HintPath>
