<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net8.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>

		<IsPackable>false</IsPackable>

		<OutputType>Exe</OutputType>
		<EnableMSTestRunner>true</EnableMSTestRunner>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="MSTest" Version="3.2.0-preview.24055.6" />
		<PackageReference Include="Microsoft.Testing.Extensions.Trx" Version="1.0.0-preview.24052.7" />
		<PackageReference Include="Microsoft.Testing.Platform.Extensions.CodeCoverage" Version="17.10.0-preview.24058.1" />
	</ItemGroup>

</Project>
