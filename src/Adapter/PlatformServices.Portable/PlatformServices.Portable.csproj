<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;$(NetCoreAppCurrent);$(NetCoreAppMinimum)</TargetFrameworks>
  </PropertyGroup>

  <PropertyGroup>
    <RootNamespace>Microsoft.VisualStudio.TestPlatform.MSTestAdapter.PlatformServices</RootNamespace>
    <AssemblyName>Microsoft.VisualStudio.TestPlatform.MSTestAdapter.PlatformServices</AssemblyName>
    <DefineConstants>TRACE</DefineConstants>
    <DefineConstants Condition=" '$(TargetFramework)' == 'netstandard2.0' ">$(DefineConstants);NETSTANDARD_PORTABLE</DefineConstants>
    <ErrorReport>prompt</ErrorReport>
    <WarningLevel>4</WarningLevel>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
    <DebugSymbols>true</DebugSymbols>
    <DebugType>full</DebugType>
    <Optimize>false</Optimize>
    <DefineConstants>$(DefineConstants);DEBUG;CODE_ANALYSIS</DefineConstants>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
    <DebugType>pdbonly</DebugType>
    <Optimize>true</Optimize>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="$(RepoRoot)src\Adapter\PlatformServices.Interface\PlatformServices.Interface.csproj" />
    <ProjectReference Include="$(RepoRoot)src\TestFramework\MSTest.Core\MSTest.Core.csproj" />
    <ProjectReference Include="$(RepoRoot)src\TestFramework\Extension\Extension.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.TestPlatform.ObjectModel" Version="$(MicrosoftNETTestSdkVersion)" />
    <PackageReference Include="MicroBuild.Core" Version="$(MicroBuildCoreVersion)" PrivateAssets="all">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <Compile Include="$(RepoRoot)src\Adapter\PlatformServices\MarshalByRefObject.cs" Link="MarshalByRefObject.cs" />
    <Compile Include="$(RepoRoot)src\Adapter\PlatformServices\SerializableAttribute.cs" Link="SerializableAttribute.cs" />
    <Compile Include="$(RepoRoot)src\Adapter\PlatformServices\Services\DiaSessionOperations.cs" Link="Services\DiaSessionOperations.cs" />
    <Compile Include="$(RepoRoot)src\Adapter\PlatformServices\Services\FileOperations.cs" Link="Services\FileOperations.cs" />
    <Compile Include="$(RepoRoot)src\Adapter\PlatformServices\Services\ReflectionOperations.cs" Link="Services\ReflectionOperations.cs" />
    <Compile Include="$(RepoRoot)src\Adapter\PlatformServices\Services\SettingsProvider.cs" Link="Services\SettingsProvider.cs" />
    <Compile Include="$(RepoRoot)src\Adapter\PlatformServices\Services\TestContextImplementation.cs" Link="Services\TestContextImplementation.cs" />
    <Compile Include="$(RepoRoot)src\Adapter\PlatformServices\Services\TestDataSource.cs" Link="Services\TestDataSource.cs" />
    <Compile Include="$(RepoRoot)src\Adapter\PlatformServices\Services\TestDeployment.cs" Link="Services\TestDeployment.cs" />
    <Compile Include="$(RepoRoot)src\Adapter\PlatformServices\Services\TestSource.cs" Link="Services\TestSource.cs" />
    <Compile Include="$(RepoRoot)src\Adapter\PlatformServices\Services\TestSourceHost.cs" Link="Services\TestSourceHost.cs" />
    <Compile Include="$(RepoRoot)src\Adapter\PlatformServices\Services\ThreadOperations.cs" Link="Services\ThreadOperations.cs" />
    <Compile Include="$(RepoRoot)src\Adapter\PlatformServices\Services\TraceListener.cs" Link="Services\TraceListener.cs" />
    <Compile Include="$(RepoRoot)src\Adapter\PlatformServices\Services\TraceListenerManager.cs" Link="Services\TraceListenerManager.cs" />
    <Compile Include="$(RepoRoot)src\Adapter\PlatformServices\Services\TraceLogger.cs" Link="Services\TraceLogger.cs" />
  </ItemGroup>

</Project>
